<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/_10sdp"
    android:paddingRight="@dimen/_10sdp"
    android:layout_height="match_parent"
    tools:context=".shop.PaymentActivity">

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_120sdp"
        android:background="@drawable/greyshape"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_30sdp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">
       <TextView
           android:layout_height="wrap_content"
           android:layout_width="wrap_content"
           android:textSize="@dimen/_26sdp"
           android:layout_centerInParent="true"
           android:text="@string/rupee_symbol"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="@dimen/_26sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_centerInParent="true"
                android:text="5000"/>

        </LinearLayout>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="@dimen/_13sdp"
            android:padding="@dimen/_5sdp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="To receive by 15/10/2020"/>
    </RelativeLayout>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="@dimen/_15sdp"
        android:paddingTop="@dimen/_5sdp"
        android:paddingBottom="@dimen/_5sdp"
        android:layout_centerInParent="true"
        android:text="Manage Payment Methods"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_10sdp"
        android:id="@+id/payment_creditcard"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">
     <ImageView
         android:layout_height="@dimen/_30sdp"
         android:layout_width="@dimen/_30sdp"
         android:background="@drawable/ic_credit_card"
         />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textSize="@dimen/_14sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:paddingTop="@dimen/_5sdp"
            android:drawableRight="@drawable/ic_baseline_keyboard_arrow_right_24"
            android:paddingBottom="@dimen/_5sdp"
            android:layout_centerInParent="true"
            android:text="Credit, Debit &amp; ATM Cards"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_10sdp"
        android:id="@+id/paymentnetbanking"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_height="@dimen/_30sdp"
            android:layout_width="@dimen/_30sdp"
            android:background="@drawable/ic_credit_cards_payment"
            />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textSize="@dimen/_14sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:paddingTop="@dimen/_5sdp"
            android:drawableRight="@drawable/ic_baseline_keyboard_arrow_right_24"
            android:paddingBottom="@dimen/_5sdp"
            android:layout_centerInParent="true"
            android:text="Net Banking"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_10sdp"
        android:id="@+id/upipayment"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_height="@dimen/_30sdp"
            android:layout_width="@dimen/_30sdp"
            android:background="@drawable/upi"
            />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textSize="@dimen/_14sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:paddingTop="@dimen/_5sdp"
            android:drawableRight="@drawable/ic_baseline_keyboard_arrow_right_24"
            android:paddingBottom="@dimen/_5sdp"
            android:layout_centerInParent="true"
            android:text="Pay via UPI"/>

    </LinearLayout>
   <View
       android:layout_width="match_parent"
       android:layout_height="1dp"
       android:layout_marginTop="@dimen/_10sdp"
       android:layout_marginBottom="@dimen/_5sdp"
       android:background="@color/grey"/>


    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textSize="@dimen/_16sdp"
        android:paddingTop="@dimen/_5sdp"
        android:paddingBottom="@dimen/_5sdp"
        android:layout_centerInParent="true"
        android:text="Other Methods"/>

</LinearLayout>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textSize="@dimen/_15sdp"
        android:paddingTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_30sdp"
        android:layout_alignParentBottom="true"
        android:paddingBottom="@dimen/_5sdp"
        android:layout_centerInParent="true"
        android:text="Claim Settlements ?"/>
</RelativeLayout>